<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Isometric.Editor"
        xmlns:customControls="clr-namespace:Isometric.Editor.CustomControls"
        x:Name="MainWindow1" x:Class="Isometric.Editor.MainWindow"
        mc:Ignorable="d"
        Title="Isometric Editor" Height="322.821" Width="525">
    <Grid Margin="0,0,0,1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="127*"/>
            <ColumnDefinition Width="87*"/>
            <ColumnDefinition Width="303*"/>
        </Grid.ColumnDefinitions>

        <ListBox x:Name="BuildingsListBox" HorizontalAlignment="Left" Height="232" Margin="10,10,0,0" VerticalAlignment="Top" Width="107" SelectionChanged="BuildingsListBox_OnSelectionChanged"/>
        <Button Grid.Column="0" x:Name="AddButton" Content="Add" HorizontalAlignment="Left" Margin="10,247,0,0" VerticalAlignment="Top" Width="50" Height="22" Click="AddButton_Click"/>
        <Button Grid.Column="0" x:Name="RemoveButton" Content="Remove" HorizontalAlignment="Left" Margin="65,247,0,0" VerticalAlignment="Top" Width="52" Height="22"/>
        <TextBox x:Name="NameTextBox" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" Width="283" Grid.Column="2" TextChanged="NameTextBox_OnTextChanged"/>
        <TextBox x:Name="IdTextBox" Grid.Column="2" HorizontalAlignment="Left" Height="23" Margin="10,44,0,0" TextWrapping="Wrap" Text="ID" VerticalAlignment="Top" Width="283" IsReadOnly="True" RenderTransformOrigin="0.554,2.736"/>
        <ComboBox x:Name="BuildingTypeComboBox" Grid.Column="2" HorizontalAlignment="Left" Margin="10,76,0,0" VerticalAlignment="Top" Width="120" AlternationCount="1" SelectionChanged="BuildingTypeComboBox_OnSelectionChanged"/>
        <Label x:Name="NameLabel" Content="Name" Grid.Column="1" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="ResourcesLabel" Content="Resources" Grid.Column="1" HorizontalAlignment="Left" Margin="10,103,0,0" VerticalAlignment="Top"/>
        <Label x:Name="TypeLabel" Content="Type" Grid.Column="1" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top"/>
        <Label x:Name="IdLabel" Content="ID" Grid.Column="1" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
        <Label x:Name="PriceLabel" Content="Price" Grid.Column="1" HorizontalAlignment="Left" Margin="10,134,0,0" VerticalAlignment="Top"/>
        <customControls:ResourcesTextBox x:Name="ResourcesTextBox" Grid.Column="2" HorizontalAlignment="Left" Margin="10,107,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="283" Background="White" TextChanged="ResourcesTextBox_TextChanged"/>
        <customControls:ResourcesTextBox x:Name="PriceTextBox" Grid.Column="2" HorizontalAlignment="Left" Margin="10,140,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="283" Background="White" TextChanged="PriceTextBox_TextChanged"/>

    </Grid>
</Window>
